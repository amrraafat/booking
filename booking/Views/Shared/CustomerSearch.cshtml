@model List<Customer>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>National ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerName</td>
                <td>@customer.NationalId</td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="selectCustomer('@customer.CustomerName', '@customer.NationalId')">Select</button>
                </td>
            </tr>
        }
    </tbody>
</table>