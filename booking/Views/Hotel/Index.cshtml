@model List<HotelViewModel>

@{
    ViewData["Title"] = "Hotels";
    var currentCulture = ViewBag.currentCulture;
}

<div class="container">
    <h1>Hotels</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().hotel.HotelNameFL)</th>
                        <th>@Html.DisplayNameFor(model => model.First().hotel.HotelLocation)</th>
                        <th>@Html.DisplayNameFor(model => model.First().hotel.HotelRate)</th>
                        <th>Photo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hotelViewModel in Model)
                    {
                        <tr>
                            <td>
                                @if (currentCulture == "ar")
                                {
                                    @hotelViewModel.hotel.HotelNameFL
                                }
                                else
                                {
                                    @hotelViewModel.hotel.HotelNameSL
                                }
                            </td>
                            <td>@hotelViewModel.hotel.HotelLocation</td>
                            <td>@hotelViewModel.hotel.HotelRate</td>
                            <td>
                                @if (!string.IsNullOrEmpty(hotelViewModel.ImageFileName))
                                {
                                    var imageSrc = Url.Action("GetImage", "Hotel", new { id = hotelViewModel.hotel.HotelId });
                                    <img src="@imageSrc" alt="Hotel Image" width="100" height="100" />
                                }
                                else
                                {
                                    <span>No Photo Available</span>
                                }
                            </td>
                            <td>
                                @*<a href="@Url.Action("Details", "Hotel", new { id = hotelViewModel.hotel.HotelId })" class="btn btn-info">Preview</a>*@
                                <a href="@Url.Action("Edit", "Hotel", new { id = hotelViewModel.hotel.HotelId })" class="btn btn-warning">Edit</a>
                                <button class="btn btn-danger" onclick="deleteHotel(@hotelViewModel.hotel.HotelId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Create", "Hotel")" class="btn btn-success">Create New Hotel</a>
        </div>
    </div>
</div>
<script>
    function deleteHotel(hotelId) {
        if (confirm("Are you sure you want to delete this hotel?")) {
            $.ajax({
                url: "hotel/Delete",
                type: 'POST', // Or 'DELETE' depending on your server configuration
                data: { id: hotelId },
                success: function (result) {
                    // Handle success, e.g., refresh the page or update UI
                    location.reload(); // Reload the page after successful deletion
                },
                error: function (xhr, status, error) {
                    // Handle error
                    console.error(error);
                }
            });
        }
    }
</script>
