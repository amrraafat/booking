@model Infarstuructre.Helper.PrintReservationModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
 
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.css">
    <link rel="stylesheet" href="~/Admin/dist/css/custom.css">
    <!-- Responsive RTL -->
    <link rel="stylesheet" href="~/Admin/dist/css/responsive-rtl.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/A4.css" rel="stylesheet" />
</head>
<body>
    <style>
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .company-info {
            text-align: right; /* Align text to the right */
        }

        .reportImage {
            width: 250px; /* Adjust the width as needed */
            height: auto;
        }

    </style>
    <div class="a4-container" id="print-content">
        <div class="header">
            <div class="company-info">
                <p> الهضبه للتسويق السياحى</p>
                <p>Elhadaba for tourism marketing</p>
                <p>شرم الشيخ - الغردقة - العين السخنة الساحل الشمالي</p>
            </div>
            <div class="logo">
                <img src="~/Images/Logo/WhatsApp Image 2024-03-15 at 2.19.04 AM.jpeg" alt="Logo" class="reportImage">
            </div>
        </div>

        <div class="container">
            <div class="row g-3">
                <div class="col">
                    <div class="row g-4 align-items-center">
                        <div class="col-4">
                            <label for="" class="col-form-label">تاريخ الحجز</label>
                        </div>
                        <div class="col">
                            <input value="@Model.ReservationDateTime.ToString("yyyy-MM-dd")" type="text" id="" class="form-control" disabled="disabled">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-4">
                            <label for="" class="col-form-label">تاريخ بدء الرحلة</label>
                        </div>
                        <div class="col">
                            <input value="@Model.StartDate.ToString("yyyy-MM-dd")" type="text" id="" class="form-control" disabled="disabled">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-4">
                            <label for="" class="col-form-label">تاريخ انتهاء الرحلة</label>
                        </div>
                        <div class="col">
                            <input value="@Model.EndDate.ToString("yyyy-MM-dd")" type="text" id="" class="form-control" disabled="disabled">
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row g-3 align-items-center">
                        <div class="col-4">
                            <label for="" class="col-form-label">الفندق</label>
                        </div>
                        <div class="col">
                            <input type="text" value="@Model.HotelName" id="" class="form-control" disabled="disabled">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-4">
                            <label for="" class="col-form-label">العرض</label>
                        </div>
                        <div class="col">
                            <input type="text" value="@Model.PackageName" id="" class="form-control" disabled="disabled">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-4">
                            <label for="" class="col-form-label">درجة الإقامة</label>
                        </div>
                        <div class="col">
                            <input type="text" value="@Model.Residencylevel" class="form-control" disabled="disabled">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
        <table class="table table-bordered   text-center mt-3">
            <thead>
                <tr class="table-active">
                    <th> <p>الاسم</p></th>
                    <th> <p>عدد الافراد</p></th>
                    <th> <p>سعر الفرد</p></th>
                    <th> <p>الاجمالى</p></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                   
                    <td>@Model.CustomerName</td>
                    <td>@Model.AdultNo</td>
                    <td>@Model.AdultPrice</td>
                    <td>@Model.AdultTotal</td>
                </tr>
            <thead>
                <tr class ="table-active">
                    <th> <p>رقم الهاتف</p></th>
                    <th> <p>عدد الاطفال</p></th>
                    <th> <p>السعر للطفل</p></th>
                    <th> <p>الاجمالي</p></th>
                </tr>
            </thead>
                <tr>
                <td>@Model.MobileNumber</td>
                <td>@Model.KidNo</td>
                <td>@Model.KidPrice</td>
                <td>@Model.KidTotal</td>
                </tr>
            <thead>
                <tr class="table-active">
                    <th> <p>مكان الرحله</p></th>
                    <th> <p>عدد الكراسي</p></th>
                    <th> <p>اجمالي سعر الكراسي</p></th>
                    <th> <p>قيمه الخصم</p></th>
                </tr>
            </thead>
                <tr>
                <td>@Model.HotelLocation</td>
                    <td>@Model.Numberofextrachairs</td>
                    <input type="text" value="@Model.Numberofextrachairs" id="Numberofextrachairs" class="form-control" hidden="hidden">
                    <td><span id="totalAmount"></span></td>
                    <input type="text" value="@Model.Amountofextrachairs" id="Amountofextrachairs" class="form-control" hidden="hidden">
                    <td>@Model.Discount</td>
                </tr>

                <!-- Add more details here as needed -->
            
        </table>


        </div>


        <div>
        <table class="table table-bordered text-center mt-2 small-table ">
            <thead>
                <tr class="table-active">
                    <th> <p>المبلغ المدفوع</p></th>
                    <th> <p>المتبقى</p></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                        <td>@Model.Paid</td>
                        <td>@Model.Remain</td>
                </tr>
            </tbody>
        </table>
        </div>
        <div>
            <p>بنود العقد :</p>
            <p>مقدم الحجز لا يقل عن 70% من قيمة الحجز</p>
            <p>في حالة الغاء الحجز أو التغيير يتم خصم 30% من إجمالي المبلغ</p>
            <p>في حالة الغاء الحجز قبل الرحلة بـ 3 أيام يتم خصم المبلغ كامل</p>
            <p>الأوراق المطلوبة ( صورة بطاقة / صورة قسيمة الجواز / صورة شهادات الميلاد )</p>
            <p>يتم اعتبار التوقيع على هذا الإيصال بمثابة موافقة على الشروط المذكورة</p>
            <p>للشكاوي أو الإستفسارات يرجى الإتصال على : 01097282089 </p>

            <div class="row mt-5">
                <div class="col-4">
                    <p>إمضاء العميل</p>
                </div>
                <div class="col-4 padding">
                    <p>إمضاء.المستلم</p>
                </div>
            </div>
           

        </div>
    </div>



    <script>
        window.onload = printContent();
        function printContent() {
            changechairsCounts();
            window.print();
            
        }
        
        function changechairsCounts() {
            var numberOfExtraChairs = parseInt(document.getElementById("Numberofextrachairs").value);
            var amountOfExtraChairs = parseInt(document.getElementById("Amountofextrachairs").value);

            var totalAmount = numberOfExtraChairs * amountOfExtraChairs;


            document.getElementById("totalAmount").innerText = totalAmount;
            document.getElementById("totalAmount").value = totalAmount;
        }
    </script>
    <script src="script.js"></script> <!-- Assuming you have a separate JavaScript file -->
</body>
</html>
