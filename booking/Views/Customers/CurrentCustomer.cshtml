@model List<Customer>



<div class="wrapper">
    <!--Content-Header-->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Localizer["lbCurrentCustomer"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Home/Index">@Localizer["lbHomePage"]</a></li>
                        <li class="breadcrumb-item active">@Localizer["lbMangeCustomer"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!--End Content-Header-->
    <!-----------------------------------Button To add Nwe User  ---------------------------------------->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-start">
                        <h3 class="card-title" style="margin-left:20px">@Localizer["lbCurrentCustomer"]</h3>
                        <div class="card-tools ">
                        </div>
                    </div>
                    <!----------------------------------- To ReViwe Users  ---------------------------------------->
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="tableRole" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td>@Localizer["lbCustomerName"]</td>
                                    <td>@Localizer["lbID"]</td>
                                    <td>@Localizer["lbAddress"]</td>
                                    <td>@Localizer["lbGender"]</td>
                                    <td>@Localizer["lbEvents"]</td>
                                 

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Customer in Model)
                                {
                                    <tr>
                                        <td>@Customer.CustomerName</td>
                                        <td>@Customer.CustomerId</td>


                                        <td>@Customer.Address</td>
                                        <td>@Customer.Gender</td>
                                        <td>
                                            <input type="button" class="btn btn-info btn-sm" onclick="Edit('@Customer.CustomerId','@Customer.CustomerName','@Customer.Gender','@Customer.Address','@Customer.NationalId')" value="@Localizer["lbbtnEdit"]" data-bs-toggle="modal" data-bs-target="#exampleModal" />
                                            <input type="button" class="btn btn-danger btn-sm" onclick="Delete('@Customer.CustomerId')" value="@Localizer["lbbtnDelete"]" />
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>



@section Script
{

    @if (!string.IsNullOrEmpty(Context.Session.GetString("msgType")))
    {
        if (Context.Session.GetString("msgType") == "success")
        {
            <script>
                Swal.fire({
                    icon: "success",
                    title: ' @Context.Session.GetString("titel")',
                    text: '@Html.Raw(Context.Session.GetString("msg"))',
                    showConfirmButton: 'حسناً',
                });
            </script>
        }
        else
        {
            <script>
                Swal.fire({
                    icon: "error",
                    title: '@Context.Session.GetString("titel")',
                    text: '@Html.Raw(Context.Session.GetString("msg"))',
                    showConfirmButton: 'حسناً',


                });

            </script>
        }
        Context.Session.SetString("msgType", "");
    }

    <script>

        let lbTitleEdit = '@Html.Raw(Localizer["lbTitleEdit"])';
        let lbEdit = '@Html.Raw(Localizer["lbEdit"])';
        let lbAddNewRole = '@Html.Raw(Localizer["lbAddNewRole"])';
        let lbbtnSave = '@Html.Raw(Localizer["lbbtnSave"])';

        let lbTitleMsgDelete = '@Html.Raw(Localizer["lbbtnSave"])';
        let lbTextMsgDelete = '@Html.Raw(Localizer["lbTextMsgDelete"])';
        let lbconfirmButtonText = '@Html.Raw(Localizer["lbconfirmButtonText"])';
        let lbcancelButtonText = '@Html.Raw(Localizer["lbcancelButtonText"])';

        let lbTitleDeletedOk = '@Html.Raw(Localizer["lbTitleDeletedOk"])';
        let lbMsgDeletedOkRole = '@Html.Raw(Localizer["lbMsgDeletedOkRole"])';

    </script>
    <script src="~/js/currentcustomer.js"></script>

}
