@model HotelViewModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="hotel.HotelNameSL" class="control-label"></label>
                <input asp-for="hotel.HotelNameSL" class="form-control" />
                <span asp-validation-for="hotel.HotelNameSL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hotel.HotelNameFL" class="control-label"></label>
                <input asp-for="hotel.HotelNameFL" class="form-control" />
                <span asp-validation-for="hotel.HotelNameFL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hotel.HotelRate" class="control-label"></label>
                <input asp-for="hotel.HotelRate" class="form-control" />
                <span asp-validation-for="hotel.HotelRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hotel.HotelLocation" class="control-label"></label>
                <input asp-for="hotel.HotelLocation" class="form-control" />
                <span asp-validation-for="hotel.HotelLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="file" class="control-label"></label>
                <input asp-for="file" type="file" class="form-control" />
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
